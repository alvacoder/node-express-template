{
    "env": {
        "commonjs": true,
        "es6": true,
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "extends": ["prettier", "airbnb", "plugin:security/recommended"],
    "plugins": ["prettier", "security"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "prettier/prettier": "error",
        "indent":  [2, 4],
        "no-console": "off"
    }
}